@using WebSchools.Models.BlogVm

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/blog/views/shared/_blogger.cshtml";
}


<div class="blg_right fix">
    
    
    @Html.Partial("~/Areas/blog/views/shared/_AdminTopMenu.cshtml", null)

    @if (ViewBag.Error!=null)
    {
        <h3 class="text-danger">@ViewBag.Error</h3>
    }

    @*<p>
        @Html.ActionLink("Create New", "Write a new blog")
    </p>*@
    <div class="table-responsive admin_table">
        <table class="table table-condensed table-bordered table-striped table-hover">
            <tr>
                <th>
                    Blog Category
                </th>
                <th>
                    Blog Heading
                </th>
                <th>
                    Image
                </th>
                <th>
                    Blog Descrtiption
                </th>
                <th>
                    Date
                </th>
                <th>Actions</th>
            </tr>

            @foreach (BlogContent item in ViewBag.BlogContents)
            {
                <tr>
                    <td>
                        @item.BlogCategory.BlogCategoryName
                    </td>
                    <td>
                        @item.BlogHeading
                    </td>
                    <td>
                        <img class="blogAdminImg" src="~/UpImages/@Url.Content(item.ImageUrl)" />
                    </td>
                    <td>
                        @item.BlogDesc.Substring(0, 20)
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>