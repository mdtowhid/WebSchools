@model IEnumerable<WebSchools.Models.Css.CssTutorial>

@{
    ViewBag.Title = "CssTuts";
    Layout = "~/Areas/Admin/Views/Shared/_adminCss.cshtml";
}

<div style="padding: 10px;">
<p>
    @Html.ActionLink("Add New CSS Tutorials", "CreateCssTutorial", new{ @id=""}, new{ @class="btn btn-primary"})
</p>
<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th>
            Property Heading
        </th>
        <th>
            Css Properties
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Heading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Example)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            Active Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CssPropertyHeadingName.Substring(0,10)
        </td>
        <td>
            @item.CssProperties.Substring(0, 10)
        </td>
        <td>
            @item.Heading.Substring(0, 10)
        </td>
        <td>
            @item.Explanation.Substring(0, 10)
            </td>
        <td>
            @item.Example.Substring(0, 10)
            </td>
        <td>
            @item.Description.Substring(0, 10)
            </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActiveStatus)
        </td>
        <td>
            @item.Date.Substring(0, 18)
        </td>
        <td>
            <a href="~/admin/adminCss/editCssTutorial/@item.Id"><i class="fa fa-edit"></i></a>
        </td>
    </tr>
}

</table>
</div>