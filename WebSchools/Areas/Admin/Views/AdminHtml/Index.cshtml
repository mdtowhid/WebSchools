@model IEnumerable<WebSchools.Models.Html.HtmlTutorial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminHtml.cshtml";
}
<div class="" style="padding: 10px">

<p>
    @Html.ActionLink("Create New HTML Tutotrial", "CreateHtmlTutorial", new { @id = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Heading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Example)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Heading.Substring(0, 10)
            </td>
            <td>
                @item.Explanation.Substring(0, 10)
            </td>
            <td>
                @item.Example.Substring(0, 10)
            </td>
            <td>
                @item.Description.Substring(0, 10)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveStatus)
            </td>
            <td>
                @item.Date.Substring(0, 12)
            </td>
            <td>
                <a href="~/admin/adminHtml/editHtmlTutorial/@item.Id"><i class="fa fa-edit"></i></a>
            </td>
        </tr>
    }

</table>
</div>