@model IEnumerable<WebSchools.Models.Admin>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Areas/SpArea/Views/Shared/_SpArea.cshtml";
}

<div class="sp_right fix">
    @Html.Partial("~/Views/Shared/_admin_top_header.cshtml", null)
<h2>Admins</h2>

<p>
    @Html.ActionLink("Add New Admin", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfirmPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdminType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdminStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.Id })
            </td>
        </tr>
    }

</table>
</div>