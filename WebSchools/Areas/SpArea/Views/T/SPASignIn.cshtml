@model WebSchools.Models.SuperAdmins

@{
    ViewBag.Title = "Sign In";
    Layout = "~/Areas/SpArea/Views/Shared/_LogIn.cshtml";
}
<style>
    .admin_sign_in_wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height: auto;
        border: 1px solid #ddd;
    }
        .admin_sign_in_wrapper h4 {
            margin: 0;
            padding: 13px;
            background: #0E2F44;
            color: white;
        }
    .admin_sign_in_form{
        padding: 10px;
        margin: 15px 0 10px;
    }

        .admin_sign_in_form input[type="text"], input[type="password"] {
            padding: 8px;
            width: 100%;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 7px;
        }
</style>
<div class="admin_sign_in_wrapper">

    <h4>Sign In <span class="float_right">beta v 1.0.0</span></h4>
    
    <hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="admin_sign_in_form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="">
            <input name="Email" type="text" placeholder="email" />
        </div>
        <div class="">
            <input name="Password" type="password" placeholder="password" />
        </div>
        <div class="">
            <input type="submit" value="Log In" class="btn btn-primary"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</div>