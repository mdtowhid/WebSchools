@using WebSchools.Models.Html
@model WebSchools.Models.Html.HtmlIndex

@{
    ViewBag.Title = "Create Html Index";
    Layout = "~/Areas/SpArea/Views/Shared/_SpArea.cshtml";
}


<div class="sp_right fix">
    @Html.Partial("~/Views/Shared/_admin_top_header.cshtml", null)
    <div class="form_head">
        <h2>Create Html Index</h2>
        <h4>Html Index</h4>
    </div>
    <hr /><div class="well-sm form-group status">
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="text-success">@ViewBag.Success</div>
        }
    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Heading, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Heading, 1, 1, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Slug, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
                </div>
            </div>


            <input type="text" name="Sort" value="123" />
            <input type="text" name="ActiveStatus" value="active" />
            <input type="text" name="MenuDivider" value="no" />



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
