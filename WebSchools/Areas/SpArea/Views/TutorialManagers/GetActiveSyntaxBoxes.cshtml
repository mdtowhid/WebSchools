@model IEnumerable<WebSchools.Models.JavaScript.SqlSyntaxBox>

@{
    ViewBag.Title = "Active Syntax Boxes";
    Layout = "~/Areas/SpArea/Views/Shared/_SpArea.cshtml";
}
<div class="sp_right">
    @Html.Partial("~/Views/Shared/_admin_top_header.cshtml", null)
    <h2>Active Syntax Boxes</h2>

    <table class="table table-striped table-condensed table-bordered table-responsive  table-sm">
        <tr>
            <th>
                Sub Heading
            </th>
            <th>
                Sql Syntax
            </th>
            <th>
                SQL Syn Desc
            </th>
            <th>
                SII
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                SQL Exmp Id
            </th>
            <th>
                A S
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    Sub Heading
                </td>
                <td>
                    Syntax
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SqlSyntaxDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SqlIndexId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SqlExampleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminId)
                </td>
                <td>
                    @item.Date.Substring(0, 15)
                </td>
                <td>
                    <a href="~/spArea/tutorialManagers/editSqlSyntax/@item.Id"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }

    </table>
</div>
