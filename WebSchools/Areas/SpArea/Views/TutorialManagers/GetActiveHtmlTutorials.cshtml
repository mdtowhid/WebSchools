@model IEnumerable<WebSchools.Models.Html.HtmlTutorial>

@{
    ViewBag.Title = "Active Html Tutorials";
    Layout = "~/Areas/SpArea/Views/Shared/_SpArea.cshtml";
}
<div class="sp_right fix">
    @Html.Partial("~/Views/Shared/_admin_top_header.cshtml", null)
    <h2>Active Html Tutorials</h2>

    <table class="table table-striped table-condensed table-bordered table-responsive  table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Explanation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Example)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActiveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwesomeClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Heading.Substring(0, 2)
                </td>
                <td>
                    @item.Explanation.Substring(0, 2)
                </td>
                <td>
                    @item.Example.Substring(0, 2)
                </td>
                <td>
                    @item.Description.Substring(0, 2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sort)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveStatus)
                </td>
                <td>
                    @item.AwesomeClass.Substring(0, 2)
                </td>
                <td>
                    @item.Date.Substring(0, 10)
                </td>
                <td>
                    <a href="~/spArea/tutorialManagers/editHtmlTutorial/@item.Id"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }

    </table>
</div>